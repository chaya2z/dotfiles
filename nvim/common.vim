"
" ---- General ----
"
set number
highlight lineNr ctermfg=white
set showmatch
set noswapfile

"
"---- Tab, Space ----
"
set tabstop=4
set listchars=tab:»-,trail:-,eol:↲,extends:»,precedes:«,nbsp:%
set list

"
" ---- Searching ----
"
set ignorecase
set wrapscan
set hlsearch

"
" ---- Cursor ----
"
set cursorline
highlight CursorLine term=NONE cterm=NONE ctermfg=NONE ctermbg=darkgray
